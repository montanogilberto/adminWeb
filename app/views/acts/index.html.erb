<div class="form-group col-sm-8">
  <h4>Acciones</h4>
</div>

<div class="table-responsive">
  <table class="table table-condensed table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @acts.each do |act| %>
        <tr>
          <td><%= act.name %></td>
          <td><%= link_to 'Consultar', act, class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Modificar', edit_act_path(act), class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Eliminar', act, method: :delete, data: { confirm: 'Estas Seguro?' }, class: "btn btn-outline-primary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="form-group col-sm-8">
  <%= link_to 'Nuevo', new_act_path, class: "btn btn-primary" %>
</div>
