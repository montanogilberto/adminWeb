

<div class="form-group col-sm-8">
  <h4>Juzgados</h4>
</div>

<div class="table-responsive">
  <table class="table table-condensed table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courts.each do |court| %>
        <tr scope="row">
          <td><%= court.name %></td>
          <td><%= link_to 'Show', court, class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Edit', edit_court_path(court) , class: "btn btn-outline-primary btn-sm"%></td>
          <td><%= link_to 'Destroy', court, method: :delete, data: { confirm: 'Estas Seguro?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div class="form-group col-sm-8">
  <%= link_to 'Nuevo', new_court_path, class: "btn btn-primary" %>
</div>
