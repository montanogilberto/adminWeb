<div class="form-group col-sm-8">
  <h4>Judgments</h4>
</div>
<div class="table-responsive">
  <table table class="table table-condensed table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @judgments.each do |judgment| %>
        <tr scope="row">
          <td><%= judgment.name %></td>
          <td><%= link_to 'Consultar', judgment , class: "btn btn-outline-primary btn-sm"%></td>
          <td><%= link_to 'Modificar', edit_judgment_path(judgment) , class: "btn btn-outline-primary btn-sm"%></td>
          <td><%= link_to 'Eliminar', judgment, method: :delete, data: { confirm: 'Estas Seguro?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<div class="form-group col-sm-8">
  <%= link_to 'New Judgment', new_judgment_path, class: "btn btn-primary" %>
</div>
