<%= form_with(model: expedient, local: true) do |form| %>
  <% if expedient.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(expedient.errors.count, "error") %> al Guardar</h4>

      <ul>
      <% expedient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-panel col-sm-8">
    <%= form.label :NoExpedient, "No Expediente" %>
    <%= form.text_field :NoExpedient, id: :expedient_NoExpedient, class: "form-control" %>
  </div>

  <div class="form-panel col-sm-8">
    <%= form.label :year, "AÃ±o" %>
    <%= form.datetime_select :year, id: :expedient_year, class: "form-control" %>
  </div>

  <div class="form-panel col-sm-8">
    <%= form.label :active, "Activo" %>
    <%= form.check_box :active, id: :expedient_active, class: "form-control" %>
  </div>

  <div class="form-panel col-sm-8">
    <%= form.label :actor, "Actor" %>
    <%= form.text_field :actor, id: :expedient_actor, class: "form-control" %>
  </div>

  <div class="form-panel col-sm-8">
    <%= form.label :defendant, "Defendido" %>
    <%= form.text_field :defendant, id: :expedient_defendant, class: "form-control" %>
  </div>

  <div class="form-panel col-sm-8">
    <%= form.label :customer, "Cliente" %>
    <%= form.text_field :customer, id: :expedient_customer, class: "form-control" %>
  </div>

  <div class="form-panel col-sm-8">
    <%= form.label :fee , "Honorarios"%>
    <%= form.text_field :fee, id: :expedient_fee, class: "form-control" %>
  </div>

  <div class="form-panel col-sm-8">
    <%= form.label :payment, "Pago" %>
    <%= form.text_field :payment, id: :expedient_payment, class: "form-control" %>
  </div>

  <div class="form-panel col-sm-8">
    <%= form.label :saldo, "Saldo" %>
    <%= form.text_field :saldo, id: :expedient_saldo, class: "form-control" %>
  </div>

  <div class="form-group col-sm-8">
      <%= form.label :court, "Juzgados" %>
      <%= form.collection_select(:court_id, Court.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
  </div>  

  <div class="form-group col-sm-8">
      <%= form.label :state, "Estado" %>
      <%= form.collection_select(:state_id, State.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
  </div>

  <div class="form-group col-sm-8">
      <%= form.label :district, "Distrito" %>
      <%= form.collection_select(:district_id, District.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
  </div>

  <div class="form-group col-sm-8">
      <%= form.label :act, "Accion" %>
      <%= form.collection_select(:act_id, Act.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
  </div>

  <div class="form-group col-sm-8">
      <%= form.label :matter, "Materia" %>
      <%= form.collection_select(:matter_id, Matter.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
  </div>

  <div class="form-group col-sm-8">
      <%= form.label :judgment, "Juicio" %>
      <%= form.collection_select(:judgment_id, Judgment.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
  </div>

  <div class="form-panel col-sm-8">
    <div class="actions">
      <%= form.submit "Guardar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
