<%= form_with(model: expedient, local: true) do |form| %>
  <% if expedient.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(expedient.errors.count, "error") %> al guardar el registro</h4>

      <ul>
      <% expedient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-row">
    <div class="form-panel col-md-4 mb-3">
      <%= form.label :NoExpedient, "No Expediente"  %>
      <%= form.text_field :NoExpedient, id: :expedient_NoExpedient, class: "form-control", required: true %>
    </div>

    <div class="form-panel col-md-4 mb-3">
      <%= form.label :year, "AÃ±o" %>
      <%= form.date_select :year, {order: [:year] }, { class: "form-control" } %>
    </div>

    <div class="form-panel col-md-4 mb-3">
      <%= form.label :active, "Activo" %>
      <%= form.check_box :active, id: :expedient_active, class: "form-control", required: true %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-panel col-md-4 mb-3">
      <%= form.label :actor, "Actor" %>
      <%= form.text_field :actor, id: :expedient_actor, class: "form-control", required: true %>
    </div>

    <div class="form-panel col-md-4 mb-3">
      <%= form.label :defendant, "Defendido" %>
      <%= form.text_field :defendant, id: :expedient_defendant, class: "form-control", required: true %>
    </div>

    <div class="form-group col-md-4 mb-3">
        <%= form.label :customer, "Cliente" %>
        <%= form.collection_select(:customer_id, Customer.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
    </div>
   
  </div>
  <div class="form-row">
    <div class="form-panel col-md-4 mb-3">
      <%= form.label :fee , "Honorarios"%>
      <%= form.text_field :fee, id: :expedient_fee, class: "form-control", required: true %>
    </div>

    <div class="form-panel col-md-4 mb-3">
      <%= form.label :payment, "Pago" %>
      <%= form.text_field :payment, id: :expedient_payment, class: "form-control", required: true %>
    </div>

    <div class="form-panel col-md-4 mb-3">
      <%= form.label :saldo, "Saldo" %>
      <%= form.text_field :saldo, id: :expedient_saldo, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4 mb-3">
        <%= form.label :court, "Juzgados" %>
        <%= form.collection_select(:court_id, Court.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
    </div>  

    <div class="form-group col-md-4 mb-3">
        <%= form.label :state, "Estado" %>
        <%= form.collection_select(:state_id, State.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
    </div>

    <div class="form-group col-md-4 mb-3">
        <%= form.label :district, "Distrito" %>
        <%= form.collection_select(:district_id, District.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4 mb-3">
        <%= form.label :act, "Accion" %>
        <%= form.collection_select(:act_id, Act.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
    </div>

    <div class="form-group col-md-4 mb-3">
        <%= form.label :matter, "Materia" %>
        <%= form.collection_select(:matter_id, Matter.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
    </div>

    <div class="form-group col-md-4 mb-3">
        <%= form.label :judgment, "Juicio" %>
        <%= form.collection_select(:judgment_id, Judgment.all, :id, :name,{ include_blank: false }, { class: "form-control" }) %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4 mb-3">
      <%= form.submit "Guardar", class: "btn btn-primary" %>
      <%= link_to 'Regresar', expedients_path, class: "btn btn-primary" %>
    </div>
  </div>

<% end %>
