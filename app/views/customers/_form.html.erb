
    <%= form_with(model: customer, local: true) do |form| %>
      <% if customer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(customer.errors.count, "error") %> Error al guardar el registro:</h2>

          <ul>
          <% customer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
  


    <div class="form-group col-sm-8">
      <%= form.label :name, "Nombre" %>
      <%= form.text_field :name, id: :customer_name, class: "form-control" %>
    </div>

    <div class="form-group col-sm-8">
      <%= form.label :adress, "Domicilio Particular" %>
      <%= form.text_field :adress, id: :customer_adress, class: "form-control" %>
    </div>

    <div class="form-group col-sm-8">
      <%= form.label :adress2, "Domicilio Notificador" %>
      <%= form.text_field :adress2, id: :customer_adress2, class: "form-control" %>
    </div>

    <div class="form-group col-sm-8">
      <%= form.label :email, "Correo Electronico" %>
      <%= form.text_field :email, id: :customer_email, class: "form-control" %>
    </div>

    <div class="form-group col-sm-8">
      <%= form.label :celular %>
      <%= form.text_field :celular, id: :customer_celular, class: "form-control" %>
    </div>

    <div class="form-group col-sm-8">
    <label for="exampleFormControlSelect1">Tipo Cliente</label>
      <select class="form-control">
        <option>1</option>
      </select>
    </div>

    <div class="form-group col-sm-8">
      <div class="actions">
        <%= form.submit "Guardar", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

