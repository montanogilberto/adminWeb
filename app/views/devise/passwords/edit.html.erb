<div class="form-group col-sm-8">
  <h4>Cambiar contraseña</h4>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group col-sm-8">
    <%= f.label :password, "Nueva Contraseña" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> Caracteres Minimos)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "Nueva-Contraseña", class: "form-control" %>
  </div>

  <div class="form-group col-sm-8">
    <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group col-sm-8">
    <div class="actions">
      <%= f.submit "Cambiar me contraseña", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
