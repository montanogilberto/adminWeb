<div class="form-group col-sm-8">
  <h3>Tipo de Clientes</h3>
</div>

<div class="table-responsive">
  <table class="table table-condensed table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customer_types.each do |customer_type| %>
        <tr>
          <td scope="row"><%= customer_type.name %></td>
          <td><%= link_to 'Consultar', customer_type, class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Modificar', edit_customer_type_path(customer_type), class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Eliminar', customer_type, method: :delete, data: { confirm: 'Estas Seguro?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<div class="form-group col-sm-8">
  <%= link_to 'Nuevo Tipo Cliente', new_customer_type_path, class: "btn btn-primary" %>
</div>
