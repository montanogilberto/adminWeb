<div class="form-group col-sm-8">
  <h4>Distritos</h4>
</div>

<div class="table-responsive">
  <table class="table table-condensed table-striped table-hover">
    <thead class="thead-light">
      <tr>
        <th scope="col">Nombre</th>
        <th scope="col">Estado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @districts.each do |district| %>
        <tr scope="row">
          <td><%= district.name %></td>
          <td><%= district.state.name %></td>
          <td><%= link_to 'Consultar', district, class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Modificar', edit_district_path(district), class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Eliminar', district, method: :delete, data: { confirm: 'Estas Seguro?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
<div class="form-group col-sm-8">
  <%= link_to 'Nuevo', new_district_path, class: "btn btn-primary" %>
</div>
