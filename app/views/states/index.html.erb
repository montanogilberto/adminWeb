<div class="form-panel col-sm-8">
  <h4>Estados</h4>
</div>
<div class="table-responsive">
  <table class="table table-hover table-sm">
    <thead class="thead-light">
      <tr>
        <th scope="col">Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @states.each do |state| %>
        <tr>
          <td><%= state.name %></td>
          <td><%= link_to 'Consultar', state, class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Modificar', edit_state_path(state), class: "btn btn-outline-primary btn-sm" %></td>
          <td><%= link_to 'Eliminar', state, method: :delete, data: { confirm: 'Estas Seguro?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="form-panel col-sm-8">
  <%= link_to 'Nuevo', new_state_path, class: "btn btn-primary" %>
</div>
