<%= form_with(model: matter, local: true) do |form| %>
  <% if matter.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(matter.errors.count, "error") %> al Guardar</h4>

      <ul>
      <% matter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-panel col-sm-8">
    <%= form.label :name, "Nombre" %>
    <%= form.text_field :name, id: :matter_name, class: "form-control" %>
  </div>

  <div class="form-panel col-sm-8">
    <div class="actions">
      <%= form.submit "Guardar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
